{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
            "plugins/markdown",
            "./doc/jsdoc/files"
    ],
    "extra_mainpages" : [
        { "path" : "./doc/docs/Widgets.md", "name" : "Layout" },
        "./doc/docs/Rendering.md"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "staticFiles": {
                "include" : [
                    "./doc/jsdoc/screen.css"
                ]
            },
            "outputSourceFiles": true,
            "layoutFile" : "doc/jsdoc/layout.tmpl",
            "useLongnameInNav" : true
        }
    }
}
